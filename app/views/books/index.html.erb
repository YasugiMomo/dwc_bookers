<body>
  <h1>Books</h1>
  <!--投稿一覧-->
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  </table>
  <!--新規投稿-->
  <h2>New book</h2>
  <!--form_withヘルパー-->
  <%= form_with model: @ do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>

    <p>Body</p>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</body>











