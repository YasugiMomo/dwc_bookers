<body>
  <h1>Books</h1>
  <!--投稿一覧-->
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <!--データを取得する構文-->
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Show', book, method: :get %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <!--viewは不要-->
          <td><%= link_to 'Destroy', book, method: :delete, data: {confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
  </table>

  <!--新規投稿-->
  <h2>New book</h2>
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>

  <!--form_withヘルパー-->
  <%= form_with model: @book do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>

    <p>Body</p>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</body>
